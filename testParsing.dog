featuresNeeded = {}

runCode=`
    me EParser: parser
    parser.populateGrammar()
    parser.initPosStateSets(parser.parse_testParse_str, "[Robert 234 4/19/1967 'Hello World!'1 ]")   // "[Robert 234 4/19/1967 'Hello World!'1]")
  //  parser.initPosStateSets(parser.parse_testParse_str, "[Robert 234 4/19/1967 'Hello World!'1 2/22/1922 ]")

    parser.doParse()
    if(parser.doesParseHaveError()){
        print("\nParse Error:", parser.errorMesg, " at line ", parser.errLineNum,":", parser.errCharPos, "\n")
        exit(2)
    }
    our stateRec: topItem <- parser.resolve(parser.lastTopLevelItem, "")
    parser.displayParse(topItem, "")
    me testParse: TPM
    parser.ExtractStruct_testParse_str(topItem, TPM)

    print("\n\nTPM.Mesg: ", TPM.worldMesg, "\n")
    print("Birthday:", TPM.birthday.month, "-", TPM.birthday.day, "-", TPM.birthday.year, "\n")
    withEach num in TPM.numbStr:{
        print(num, "\n")
   }
   print("TPM.myNUm: ", TPM.myNum, "\n")
`

Include=`<memory>, <fstream>, <cstdint>, <string>, <cstring>, <vector>, <deque>, <map>, <cstdarg>, <iostream>`

#include libraryTags.dog


model month {mode [January, February, March, April, May, June, July, August, September, October, November, December] : month}

model date {
    me 1..12: month
    me int32: day
    me int32: year
}
struct date::mem auto

model personRec {
    flag: hired
    me int32:  age
    me string: name
    me string: address
    me date:   birthday
}

struct personRec::mem auto

string date::str {
    > int32:month
     "/"
    > int32:day "/"
    > int32:year
    " "
}
//do makeGUI(listMgr)

string personRec::str {
    flag: hired
    > me int32:  age
    > me string: name
    > me string: address
  //  > me date::str:   birthday
  //  > me {me int32: height me int32: weight}: measurements
}

string numChar["1" | "2" | "3" | "4"]

model testParse{
    "Robert"
    numChar[list]: numbStr
    me date: birthday
    me string: worldMesg
    me numChar: myNum
    me date[list]: birthdays
    me string: tag
}

string testParse::str{
    "["
    "Robert" " "
    > numChar[list]: numbStr " "
    > date::str: birthday
    > me string: worldMesg
    //> me numChar[opt]: optNum ","
    > me numChar: myNum " "
   // > me date::str[list]: birthdays
    "]"
/*
   >[   "?"
    |   "%W"
    |   "%this"
    |   >me CID: tag
    |   >{ "*" >me ws "+"}
    ]
*/
}

